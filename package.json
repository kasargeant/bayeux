{
  "name": "bayeux",
  "version": "0.9.1",
  "description": "A simple, capable and pragmatic Tap-based test framework.",
  "keywords": [
    "javascript",
    "test",
    "testing",
    "tap",
    "json"
  ],
  "author": "Kyle Alexis Sargeant",
  "email": "kasargeant@gmail.com",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasargeant/bayeux.git"
  },
  "main": "src/index.js",
  "bin": {
    "bayeux": "./bin/bayeux"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "engines": {
    "node": "~6.10.0",
    "npm": "~3.10.10"
  },
  "scripts": {
    "docs": "jsdoc -c ./conf/jsdoc.json -r",
    "exp-coveralls": "nyc report --reporter=text-lcov | coveralls",
    "exp-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "bayeux-test": "./bin/bayeux ./test/js/samples/*.test.js",
    "bayeux-test-cover": "nyc ./bin/bayeux ./test/js/samples/*.test.js",
    "bayeux-test-cover-single": "nyc node ./test/js/samples/Tinter16.test.js",
    "test": "jest --config ./conf/jest.json",
    "test-cover": "jest --config ./conf/jest.json --coverage",
    "test-update": "jest --config ./conf/jest.json --updateSnapshot"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "jest": "^20.0.4",
    "jest-html-reporter": "^0.3.0",
    "minami": "^1.2.3",
    "tap-parser": "^5.4.0",
    "tape": "^4.6.3"
  },
  "jest-html-reporter": {
    "pageTitle": "Test Results",
    "outputPath": "docs/tests/index.html",
    "includeFailureMsg": false
  },
  "dependencies": {
    "async-series": "0.0.1",
    "glob": "^7.1.2",
    "jsdoc": "^3.4.3",
    "minimist": "^1.2.0",
    "nyc": "^11.0.2",
    "sinon": "^2.3.5",
    "tinter": "^0.4.5"
  }
}
